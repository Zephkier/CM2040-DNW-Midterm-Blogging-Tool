<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" type="text/css" href="/main.css" />
        <title><%= pageName + tabNameSeparator + appName %></title>
    </head>
    <body>
        <header><%- include("../header-nav.ejs") %></header>

        <h1><%= pageName %></h1>

        <!-- Form's "action" must match author.js' ".post()" function -->
        <form method="POST" action="/author/article-edit/<%= chosenArticle.id %>">
            <div class="form-input-area">
                <label for="articleTitle">Title</label>
                <input id="articleTitle" name="articleTitle" type="text" value="<%= chosenArticle.title || '' %>" />
                <%formErrors.forEach((error) => { %> <%if (error.path === 'articleTitle') { %>
                <p class="error-message"><%= error.msg %></p>
                <%} %> <%}); %>
            </div>

            <div class="form-input-area">
                <label for="articleSubtitle">Subtitle (optional)</label>
                <input id="articleSubtitle" name="articleSubtitle" type="text" value="<%= chosenArticle.subtitle || '' %>" />
            </div>

            <div class="form-input-area">
                <label for="articleBody">Body</label>
                <textarea id="articleBody" name="articleBody"><%= chosenArticle.body || '' %></textarea>
                <%formErrors.forEach((error) => { %> <%if (error.path === 'articleBody') { %>
                <p class="error-message"><%= error.msg %></p>
                <%} %> <%}); %>
            </div>

            <div class="form-input-area">
                <input type="submit" value="Save" />
                <a href="/author"><button type="button">Cancel</button></a>
            </div>
        </form>

        <footer><%- include("../header-nav.ejs") %></footer>
    </body>
</html>
